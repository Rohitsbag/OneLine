{
    "$schema": "https://mintlify.com/docs.json",
    "name": "OneLine API",
    "theme": "mint",
    "logo": {
        "dark": "/logo.png",
        "light": "/logo.png"
    },
    "favicon": "/favicon.svg",
    "colors": {
        "primary": "#6366f1",
        "light": "#818cf8",
        "dark": "#4f46e5"
    },
    "navbar": {
        "primary": {
            "type": "button",
            "label": "Open App",
            "href": "https://get-one-line.vercel.app"
        }
    },
    "navigation": {
        "groups": [
            {
                "group": "Get Started",
                "pages": [
                    "introduction",
                    "authentication",
                    "changelog"
                ]
            },
            {
                "group": "API Reference",
                "pages": [
                    "api-reference/overview",
                    "api-reference/entries",
                    "api-reference/search"
                ]
            },
            {
                "group": "MCP Server",
                "pages": [
                    "mcp/overview",
                    "mcp/tools"
                ]
            }
        ]
    },
    "api": {
        "mdx": {
            "auth": {
                "method": "bearer"
            },
            "server": "https://ytnovnqeugzmcazavbvz.supabase.co/functions/v1/api-gateway"
        },
        "playground": {
            "display": "interactive"
        },
        "examples": {
            "languages": [
                "curl",
                "python",
                "javascript"
            ],
            "defaults": "required",
            "prefill": true
        }
    },
    "contextual": {
        "options": [
            "copy",
            "view",
            "chatgpt",
            "claude",
            "perplexity",
            "mcp",
            "cursor",
            "vscode"
        ]
    },
    "seo": {
        "indexing": "all"
    },
    "footer": {
        "socials": {
            "github": "https://github.com/Rohitsbag/OneLine"
        }
    }
}